{
  "buildCommand": "bun run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/image", "destination": "/api/image" },
    { "source": "/api/og", "destination": "/api/og.mjs" }
  ],
  "env": {
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
  },
  "functions": {
    "api/image.ts": {
      "maxDuration": 30
    },
    "api/og.mjs": {
      "maxDuration": 10
    }
  }
}