{
  "name": "weaaqi-page",
  "version": "1.0.0",
  "description": "Weather & AQI Dashboard with automatic static site generation",
  "type": "module",
  "scripts": {
    "dev": "bun run scripts/server.ts",
    "dev:html": "bun ./index.html",
    "generate": "bun run scripts/generate-static.ts",
    "generate:watch": "bun run scripts/generate-static.ts --watch",
    "build": "bun run scripts/generate-static.ts && bun build ./dist/index.html --outdir=dist --minify",
    "start": "bun run scripts/server.ts",
    "preview": "bun ./dist/index.html"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "author": "",
  "license": "MIT"
}
